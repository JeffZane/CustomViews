<resources>

    <style name="MyTheme.Base" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
    </style>

    <style name="MyTheme.Styled" parent="@style/MyTheme.Base">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/bg_action_bar</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:fadingEdge">none</item>
    </style>

</resources>